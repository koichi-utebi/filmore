<div class="row">
  <div class="col-md-10 offset-md-1">
    <% if flash[:notice] %>
      <p class='flash' id='notice'><%= notice %></p>
    <% elsif flash[:alert] %>
      <p class='flash' id='alert'><%= alert %></p>
    <% end %>
  </div>
</div>
<script>
  $(function() {
    setTimeout("$('.flash').fadeOut('slow')", 2000);
  });
</script>
