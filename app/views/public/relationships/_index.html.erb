<div class="row pt-3">
  <% if customer.exists? %>
    <% customer.each do |customer| %>
    <div class="relationships-list mt-2 mb-2">
     <%= link_to customer_path(customer.id), class: "text-decoration-none" do %>
        <%= image_tag customer.get_profile_image, class: "rounded-circle",size: '100x100' %>
        <%= customer.name %>
      <% end %>
      <% if customer.following?(current_customer) && current_customer.following?(customer) %>
      <div class="ff-tag">
        <i class="fas fa-people-arrows"></i>
      </div>
      <% end %>
    </div>
    <% end %>
  <% else %>
    <p>ユーザーはいません</p>
  <% end %>
</div>