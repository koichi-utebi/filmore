<div class="container">
  <div class="row mt-5">
    <div class="col-md-4">
      <div class="show-poster-img">
        <%= image_tag 'https://image.tmdb.org/t/p/w1280' + @movie['poster_path'],class: "rounded mb-3", size: '300x450'%><br/>
        <% if @posts.present? %>
        <div class="d-inline-flex ml-5">
          <div class="form-group" id="rate-avg"></div>
          <h5 class=" ml-4 mt-1"><%= @posts.average(:rate) %>点</h5>
        </div>
        <script>
          $(document).on('turbolinks:load', function() {
            $('#rate-avg').empty();
            $('#rate-avg').raty({
              size: 36,
              starOff:  '<%= asset_path('star-off.png') %>',
              starOn : '<%= asset_path('star-on.png') %>',
              starHalf: '<%= asset_path('star-half.png') %>',
              half: true,
              readOnly: true,
              score: <%= @posts.average(:rate) %>,
            });
          });
          </script>
        <% end %>
      </div>
    </div><%#固定されたポスター画像%>

    <div class="col-md-8">
      <h4><%= @movie['title']%></h4>
      <% @movie["genres"].each do |genre| %>
        <% if genre == @movie["genres"].last %>
          <span><%= genre["name"] %></span>
        <% else %>
          <span><%= genre["name"] %>、</span>
        <% end %>
      <% end %>
      <h5 class="pt-3">解説</h5>
      <% if @movie['overview'].present? %>
        <p><%= @movie['overview'] %></p>
      <% else %>
        <p class="text-danger"><表示できる情報がありません></p>
      <% end %>
      <p>
        <% unless @movie["runtime"] == 0 %>
          上映時間: <%= @movie["runtime"] %>分
        <% end %>
      </p>
      <p>
        <% unless @movie['release_date'].blank? %>
          公開日:　 <%= @movie['release_date'] %>
        <% end %>
      </p>

      <% if customer_signed_in? %>
      <div class="row">
        <div class="col-md-3 offset-md-1 pl-4">
          <% if WatchedList.exists?(movie_id: @movie['id'], customer_id: current_customer.id) %>
            <%= link_to watched_list_path(@movie['id']), method: :delete, class: "" do %>
              <i class="fas fa-eye fa-2x text-primary"></i>
            <% end %>
            <span class="text-muted pl-1">(鑑賞済)</span>
          <% else %>
            <%= form_with model: @watched_list, url: watched_lists_path, method: :post do |f| %>
              <%= f.hidden_field :movie_id, :value => @movie['id'] %>
              <%= f.hidden_field :poster_path, :value => @movie['poster_path'] %>
              <%= f.hidden_field :title, :value => @movie['title'] %>
              <%= f.button :type => "submit", style: "border-style: none; background: transparent;" do %>
                <i class="far fa-eye-slash fa-2x text-dark"></i>
              <% end %>
              <span class="text-muted pl-1">(未鑑賞)</span>
            <% end %>
          <% end %>
        </div>
        <div class="col-md-3">
          <% if WishList.exists?(movie_id: @movie['id'], customer_id: current_customer.id) %>
            <%= link_to wish_list_path(@movie['id']), method: :delete, class: "" do %>
              <i class="fas fa-tasks fa-2x"></i>
            <% end %>
            <span class="text-muted pl-1">(リスト登録済)</span>
          <% else %>
            <%= form_with model: @wish_list, url: wish_lists_path, method: :post do |f| %>
              <%= f.hidden_field :movie_id, :value => @movie['id'] %>
              <%= f.hidden_field :poster_path, :value => @movie['poster_path'] %>
              <%= f.hidden_field :title, :value => @movie['title'] %>
              <%= f.button :type => "submit", style: "border-style: none; background: transparent;" do %>
                <i class="fas fa-list-ul fa-2x"></i>
              <% end %>
              <span class="text-muted pl-1">(リスト未登録)</span>
            <% end %>
          <% end %>
        </div>
        <div class="col-md-3 mt-2">
          <%= link_to ">リストを確認", customer_path(current_customer.id), class: "text-small text-muted align-text-top" %>
        </div>
      </div>
      <% end %>

      <div class="row mt-3">
        <div class="col-md-10 text-center" >
          <% if @current_customer_post.present? %>
            <p class="m-0 text-success text-left pl-5 ml-5">※既にレビューを投稿済みです</p>
            <%= link_to edit_post_path(@current_customer_post.id), class: "btn btn-outline-success w-75 text-center" do %>
              <i class="fas fa-edit"></i>レビューを編集
            <% end %>
          <% else %>
            <%= form_with model: @post, url: new_post_path, method: :get do |f| %>
              <%= f.hidden_field :movie_id, :value => @movie['id'].to_i %>
              <%= f.hidden_field :title, :value => @movie['title'] %>
              <%= f.hidden_field :poster_path, :value => @movie['poster_path'] %>
              <%= f.button :type => "submit", class: "btn btn-outline-primary w-75 text-center" do %>
                <i class="fas fa-pen"></i>レビューを書く
              <% end %>
            <% end %>
          <% end %>
        </div>
      </div>

        <% if @current_customer_post.present? %>
        <div class="row mt-5">
          <div class="col-md-12 border-bottom">
            <h3 class="text-center">あなたの投稿</h3>
          </div>
        </div>
        <div class="row mt-3">
          <div class="col-md-1 mr-3">
            <%= link_to customer_path(current_customer.id) do %>
              <%= image_tag current_customer.get_profile_image, class: "rounded-circle", size:'60x60' %>
            <% end %>
          </div>
          <div class="col-md-10 pt-2">
            <p>
              <%= link_to post_path(@current_customer_post) do %>
                <%= @current_customer_post.review_title %>
              <% end %>
            </p>
          </div>
        </div>
        <div class="row">
          <div class="col-md-10 offset-md-1 d-inline-flex ">
            <div id="current-customer-rate-<%= @current_customer_post.id %>" class="form-group"></div><p class="mt-1 ml-1"><%= @current_customer_post.rate %>点</p>
            <div class="ml-4">
              <p class="text-muted mt-1"><%= current_customer.name %>さん | <%= @current_customer_post.watched_data.strftime('%Y年%m月%d日') %> | <%= @current_customer_post.way_to_watch %></p>
            </div>
            <script>
            $(document).on('turbolinks:load', function() {
              $('#current-customer-rate-<%= @current_customer_post.id %>').empty();
              $('#current-customer-rate-<%= @current_customer_post.id %>').raty({
                size: 36,
                starOff:  '<%= asset_path('star-off.png') %>',
                starOn : '<%= asset_path('star-on.png') %>',
                starHalf: '<%= asset_path('star-half.png') %>',
                half: true,
                readOnly: true,
                score: <%= @current_customer_post.rate %>,
              });
            });
            </script>
          </div>
        </div>
        <div class="row mt-3 mb-3">
          <div class="col-md-12 show-review-body pd-1">
            <p><%= safe_join(@current_customer_post.review_body.split("\n"),tag(:br)) %></p>
          </div>
        </div>
        <% end %>
      <% if @posts.present? %>
        <div class="row mt-5">
          <div class="col-md-12 border-bottom">
            <h3 class="text-center">レビュー一覧<small>(全<%= @posts.count%>件)</small></h3>
          </div>
        </div>
        <% @posts.each do |post| %>
        <div class="row mt-3">
          <div class="col-md-1 mr-3">
            <%= link_to customer_path(post.customer.id) do %>
              <%= image_tag post.customer.get_profile_image, class: "rounded-circle", size:'60x60' %>
            <% end %>
          </div>
          <div class="col-md-10 pt-2">
            <p>
              <%= link_to post_path(post) do %>
                <%= post.review_title %>
              <% end %>
            </p>
          </div>
        </div>
        <div class="row">
          <div class="col-md-10 offset-md-1 d-inline-flex ">
            <div id="rate-<%= post.id %>" class="form-group"></div><p class="mt-1 ml-1"><%= post.rate %>点</p>
            <div class="ml-4">
              <p class="text-muted mt-1"><%= post.customer.name %>さん | <%= post.watched_data.strftime('%Y年%m月%d日') %> | <%= post.way_to_watch %></p>
            </div>
            <script>
            $(document).on('turbolinks:load', function() {
              $('#rate-<%= post.id %>').empty();
              $('#rate-<%= post.id %>').raty({
                size: 36,
                starOff:  '<%= asset_path('star-off.png') %>',
                starOn : '<%= asset_path('star-on.png') %>',
                starHalf: '<%= asset_path('star-half.png') %>',
                half: true,
                readOnly: true,
                score: <%= post.rate %>,
              });
            });
            </script>
          </div>
        </div>
        <div class="row mt-3 mb-3">
          <div class="col-md-12 show-review-body pd-1">
            <p><%= safe_join(post.review_body.split("\n"),tag(:br)) %></p>
          </div>
        </div>
        <div class="row mt-2 pb-3 border-bottom">
          <div class="col-md-6 offset-md-1">
          <% if customer_signed_in? %>
            <% if post.favorited_by?(current_customer) %>
              <%= link_to post_favorites_path(post), method: :delete do %>
                <i class="fas fa-thumbs-up"></i>いいね済
              <% end %>
              <span>(いいね!した人<%= post.favorites.count %>人)</span>
            <% else %>
              <%= link_to post_favorites_path(post), method: :post do %>
                <i class="far fa-thumbs-up"></i>いいね！
              <% end %>
              <span>(いいね!した人<%= post.favorites.count %>人)</span>
            <% end %>
          <% end %>
          </div>
        </div>
        <% end %>
      <% else %>
        <div class="row mt-5">
          <div class="col-md-12">
            <h4 class="text-center">まだレビューは投稿されていません</h4>
          </div>
        </div>
      <% end %>
    </div><%#映画情報、レビューなどのメインコンテンツ %>

  </div>
</div>