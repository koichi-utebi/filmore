<div class="container">
  <%= render 'layouts/flash_message' %>
  <div class="row mt-5">
    <div class="col-lg-4 col-sm-5 col-9 mx-auto">
      <%= render 'poster_image', movie: @movie, posts: @posts %>
    </div><%#固定されたポスター画像%>
    <div class="col-lg-8 col-sm-7">
      <%= render 'movie_details', movie: @movie %><%#映画の詳細情報%>
      <% if customer_signed_in? %>
      <div class="row">
        <%= render 'public/watched_lists/btn', movie: @movie, watched_list: @watched_list %><%#鑑賞済リストのボタン%>
        <%= render 'public/wish_lists/btn', movie: @movie, wish_list: @wish_list %><%#ウィッシュリストのボタン%>
        <div class="col-lg-3 offset-lg-0 col-sm-5 col-5 offset-7 mt-2">
          <%= link_to "リストを確認", customer_path(current_customer.id), class: "text-small text-muted align-text-top" %>
        </div>
      </div><%#リストのボタン%>
      <% end %>
      <%= render 'post_btn',model: @post, post: @current_customer_post, movie: @movie %><%#レビュー投稿ボタン%>
    </div>
  </div>

  <div class="row">
    <div class="col-lg-8 offset-lg-4 col-12">
      <%= render 'current_customer_post', post: @current_customer_post %><%#ログインしているユーザー本人の投稿%>
    </div>
  </div>
  <div class="row">
    <div class="col-lg-8 offset-lg-4 col-12">
      <% if @posts.present? %>
        <%= render 'posts', posts: @posts %><%#投稿されたレビュー一覧%>
      <% else %>
        <div class="row mt-5">
          <div class="col-md-12">
            <h4 class="text-center">まだレビューは投稿されていません</h4>
          </div>
        </div>
      <% end %>
    </div>
  </div>

</div>