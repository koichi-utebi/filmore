<div class="show-side-bar border-right">
  <div class="pt-3 mb-3 text-center">
    <%= image_tag customer.get_profile_image, class: "rounded-circle", size: "150x150" %>
  </div>
  <div class="mt-3 mb-3 text-center">
    <h5><%= customer.name %></h5>
  </div>
  <div class="mt-2 col-md-8 offset-md-2 d-inline-flex">
    <p>
      <%= customer.followings.count %>:フォロー
    </p>
    <p class="mx-1">|</p>
    <p>
      <%= customer.followers.count %>:フォロワー
    </p>
  </div>
  <% if customer_signed_in? && customer.id == current_customer.id %>
    <div class="text-center">
      <%= link_to "プロフィール編集", edit_customer_path, class: "btn btn-outline-success w-75" %>
    </div>
  <% elsif customer_signed_in? && customer.id =! current_customer.id %>
    <div class="text-center">
      <% if current_customer.following?(customer) %>
        <%= link_to "フォロー解除", customer_relationships_path(customer.id), method: :delete, class: "btn btn-outline-danger w-75" %>
      <% else %>
        <%= link_to "フォロー", customer_relationships_path(customer.id), method: :post, class: "btn btn-outline-info w-75" %>
      <% end %>
    </div>
  <% else %>
    <div class="text-center">
      <%= link_to "フォロー", customer_relationships_path(customer.id), method: :post, class: "btn btn-outline-info w-75" %>
    </div>
  <% end %>
</div>
