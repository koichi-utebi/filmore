<div class="container-fluid">
  <div class="row">
    <div class="col-md-3">
    <% if @customer.id == current_customer.id %>
      <div class="show-side-bar">
        <div class="pt-3 mb-3 text-center">
          <%= image_tag @customer.get_profile_image, class: "rounded-circle", size: "150x150" %>
        </div>
        <div class="mt-3 mb-3 text-center">
          <h5><%= @customer.name %></h5>
        </div>
        <div class="text-center">
          <%= link_to "プロフィール編集", edit_customer_path, class: "btn btn-outline-success w-75" %>
        </div>
      </div>
    <% else %>
      <div class="show-side-bar">
        <div class="pt-3 mb-3 text-center">
          <%= image_tag @customer.get_profile_image, class: "rounded-circle", size: "150x150" %>
        </div>
        <div class="mt-3 mb-3 text-center">
          <h5><%= @customer.name %></h5>
        </div>
      </div>
    <% end %>

    </div>

    <div class="col-md-9">
      <h3 class="border-bottom pt-3 pb-3 pl-4"><%= @customer.name %>さんの投稿<small>(全<%= @posts.count %>件)</small></h3>
      <div class="row">
        <div class="col-md-10 offset-md-1">
          <div class="mt-2 mb-5">
            <% @posts.each do |post| %>
              <div class="mt-3">
                <h5>
                  <%= link_to post_path(post) do %>
                    <%= post.review_title %>
                  <% end %>
                </h5>
              </div>
              <div class="d-inline-flex">
                <div id="rate-<%= post.id %>" class="form-group"></div><p class="mt-1 ml-1"><%= post.rate %>点</p>
                <div class="ml-4">
                  <p class="text-muted mt-1"><%= post.customer.name %>さん | <%= post.watched_data.strftime('%Y年%m月%d日') %> | <%= post.way_to_watch %></p>
                </div>
                <script>
                $(document).on('turbolinks:load', function() {
                  $('#rate-<%= post.id %>').empty();
                  $('#rate-<%= post.id %>').raty({
                    size: 36,
                    starOff:  '<%= asset_path('star-off.png') %>',
                    starOn : '<%= asset_path('star-on.png') %>',
                    starHalf: '<%= asset_path('star-half.png') %>',
                    half: true,
                    readOnly: true,
                    score: <%= post.rate %>,
                  });
                });
                </script>
              </div>
              <div class="mt-2 border-bottom">
                <p><%= safe_join(post.review_body.split("\n"),tag(:br)) %></p>
              </div>
            <% end %>
          </div>
        </div>
      </div>

    </div>
  </div>
</div>