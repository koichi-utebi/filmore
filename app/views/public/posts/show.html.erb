<div class="container">
  <div class="row">
    <div class="col-md-8 pt-5 offset-md-2 border-left border-right">
      <h4 class="border-bottom"><%= @post.customer.name %>さんのレビュー</h4>

      <div class="row">
        <div class="col-md-2 mt-2">
          <%= image_tag @post.customer.get_profile_image, class: "rounded-circle", size: '80x80' %>
        </div>
        <div class="col-md-10 mt-2">
          <h5 class="text-primary"><%= @post.review_title %></h5>
        </div>
      </div>

      <div class="row">
        <div class="col-md-8 offset-md-2 d-inline-flex" >
          <div id="rate-<%= @post.id %>" class="form-group"></div><%= @post.rate %>点
          <script>
          $(document).on('turbolinks:load', function() {
            $('#rate-<%= @post.id %>').empty();
            $('#rate-<%= @post.id %>').raty({
              size: 36,
              starOff:  '<%= asset_path('star-off.png') %>',
              starOn : '<%= asset_path('star-on.png') %>',
              starHalf: '<%= asset_path('star-half.png') %>',
              half: true,
              readOnly: true,
              score: <%= @post.rate %>,
            });
          });
          </script>
        </div>
      </div>

      <div class="row">
        <div class="col-md-10 offset-md-2">
          <div>
            <p class="text-muted"><%= @post.customer.name %>さん | <%= @post.watched_data.strftime('%Y年%m月%d日') %> | <%= @post.way_to_watch %></p>
          </div>
        </div>
      </div>

      <div class="row mt-3 mb-3">
        <div class="col-md-10 offset-md-2 pd-1">
          <p><%= safe_join(@post.review_body.split("\n"),tag(:br)) %></p>
        </div>
      </div>

    </div>
  </div>
</div>