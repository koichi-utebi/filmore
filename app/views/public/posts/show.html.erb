<div class="container">
  <div class="row">
    <div class="col-md-8 pt-5 offset-md-2 border-left border-right">

      <h4 class="border-bottom"><%= @post.customer.name %>さんのレビュー</h4>

      <div class="row">
        <div class="col-md-2 mt-2">
          <%= link_to customer_path(@customer.id) do %>
            <%= image_tag @post.customer.get_profile_image, class: "rounded-circle", size: '80x80' %>
          <% end %>
        </div><%#プロフィール画像%>
        <div class="col-md-10 mt-2">
          <h5 class="text-primary"><%= @post.review_title %></h5>
        </div><%#レビュータイトル%>
      </div>
      <div class="row">
        <%= render 'rate', post: @post %>
      </div><%#星の採点%>
      <div class="row">
        <div class="col-md-10 offset-md-2">
          <div>
            <p class="text-muted"><%= @post.customer.name %>さん | <%= @post.watched_data.strftime('%Y年%m月%d日') %> | <%= @post.way_to_watch %></p>
          </div>
        </div>
      </div><%#アカウント名、鑑賞日、鑑賞方法%>
      <div class="row mt-3 mb-3">
        <div class="col-md-10 offset-md-2 pd-1">
          <p><%= safe_join(@post.review_body.split("\n"),tag(:br)) %></p>
        </div>
      </div><%# レビュー内容%>
      <div class="row pb-5">
        <%= render 'public/favorites/btn', post: @post %><%# いいねボタン%>
        <div class="col-md-4">
          <%= @post.post_comments.count %>:
          <%= link_to new_post_post_comments_path(@post.id) do %>
            <i class="fas fa-comment"></i>コメントする
          <% end %>
        </div><%# コメントボタン %>
        <div class="col-md-2 offset-md-2 pb-3">
        <% if @customer == current_customer %>
          <div class="float-right">
            <%= link_to edit_post_path, class: "text-success text-decoration-none" do %>
              <i class="fas fa-edit"></i>
            <% end %>
            |
            <%= link_to post_path, method: :delete, class: "text-danger text-decoration-none" do %>
              <i class="fas fa-trash-alt"></i>
            <% end %>
          </div>
        <% end %>
        </div><%#編集、削除ボタン%>
      </div>
      <% if @post_comments.present? %>
        <div class="row">
          <div class="col-md-10 offset-md-2">
            <h5 class="text-center border-bottom">コメント一覧</h5>
          </div>
        </div>
        <% @post_comments.each do |post_comment| %>
          <div class="row">
            <div class="col-md-1 offset-md-2">
              <%= link_to customer_path(post_comment.customer_id) do %>
                <%= image_tag post_comment.customer.get_profile_image, class: "rounded-circle", size: '50x50' %>
              <% end %>
            </div>
            <div class="col-md-8 pt-3">
              <h5><%= post_comment.customer.name %>さんのコメント</h5>
            </div>
          </div>
          <div class="row pb-2 ml-4 pb-2">
            <div class="col-md-9 offset-md-2 pl-5">
              <p><%= safe_join(post_comment.comment.split("\n"),tag(:br)) %></p>
            </div>
          </div>
          <% if post_comment.customer_id == current_customer.id %>
            <div class="row">
              <div class="col-md-9 offset-md-2 border-bottom pb-3 mb-3">
                <div class="float-right">
                  <%= link_to post_post_comments_path(post_comment.id), method: :delete, class: "text-danger text-decoration-none" do %>
                    <i class="fas fa-trash-alt"></i>
                  <% end %>
                </div>
              </div>
            </div>
          <% end %>
        <% end %>
      <% end %>
    </div>
  </div>
</div>