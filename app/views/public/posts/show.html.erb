<div class="container">
  <div class="row">
    <div class="col-md-8 pt-5 offset-md-2 border-left border-right">
      
      <h4 class="border-bottom"><%= @post.customer.name %>さんのレビュー</h4>

      <div class="row">
        <div class="col-md-2 mt-2">
          <%= link_to customer_path(@customer.id) do %>
          <%= image_tag @post.customer.get_profile_image, class: "rounded-circle", size: '80x80' %>
          <% end %>
        </div><%#プロフィール画像%>
        <div class="col-md-10 mt-2">
          <h5 class="text-primary"><%= @post.review_title %></h5>
        </div><%#レビュータイトル%>
      </div>
      <div class="row">
        <%= render 'rate', post: @post %>
      </div><%#星の採点%>
      <div class="row">
        <div class="col-md-10 offset-md-2">
          <div>
            <p class="text-muted"><%= @post.customer.name %>さん | <%= @post.watched_data.strftime('%Y年%m月%d日') %> | <%= @post.way_to_watch %></p>
          </div>
        </div>
      </div><%#アカウント名、鑑賞日、鑑賞方法%>
      <div class="row mt-3 mb-3">
        <div class="col-md-10 offset-md-2 pd-1">
          <p><%= safe_join(@post.review_body.split("\n"),tag(:br)) %></p>
        </div>
      </div><%# レビュー内容%>
      <div class="row pb-5">
        <%= render 'public/favorites/btn', post: @post %><%# いいねボタン%>
        <div class="col-md-3 offset-md-1 pb-3">
        <% if @customer == current_customer %>
          <div class="float-right">
            <%= link_to edit_post_path, class: "text-success text-decoration-none" do %>
              <i class="fas fa-edit"></i>
            <% end %>
            |
            <%= link_to post_path, method: :delete, class: "text-danger text-decoration-none" do %>
              <i class="fas fa-trash-alt"></i>
            <% end %>
          </div>
        <% end %>
        </div><%#編集、削除ボタン%>
      </div>
      
    </div>
  </div>
</div>