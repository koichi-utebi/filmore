<div class="row">
  <div class="col-md-12">
    <div class="mb-5">
      <% posts.each do |post| %>
        <div class="row pt-2">
          <div class="col-md-10 offset-md-1 d-inline-flex">
              <%= link_to movie_path(post.movie_id) do %>
            <h4>"<%= post.title %>"</h4>
            <% end %>
            <h4>のレビュー</h4>
          </div>
        </div>
        <div class="row pt-2">
          <div class="col-md-1">
            <%= link_to customer_path(post.customer_id) do %>
              <%= image_tag post.customer.get_profile_image, class: "rounded-circle",size: "80x80" %>
            <% end %>
          </div>
          <div class="col-md-9 pt-3 pl-4">
            <h5>
              <%= link_to post_path(post) do %>
                <%= post.review_title %>
              <% end %>
            </h5>
          </div>
        </div>
        <div class="col-md-10 offset-md-1 d-inline-flex">
          <div id="rate-<%= post.id %>" class="form-group mt-1"></div><p class="ml-1"><%= post.rate %>点</p>
          <div class="ml-4">
            <p class="text-muted text-small"><%= post.customer.name %>さん | <%= post.watched_data.strftime('%Y年%m月%d日') %> | <%= post.way_to_watch %></p>
          </div>
          <script>
          $(document).on('turbolinks:load', function() {
            $('#rate-<%= post.id %>').empty();
            $('#rate-<%= post.id %>').raty({
              size: 36,
              starOff:  '<%= asset_path('star-off.png') %>',
              starOn : '<%= asset_path('star-on.png') %>',
              starHalf: '<%= asset_path('star-half.png') %>',
              half: true,
              readOnly: true,
              score: <%= post.rate %>,
            });
          });
          </script>
        </div>
        <div class="col-md-9 offset-md-1 mt-2">
          <p><%= safe_join(post.review_body.split("\n"),tag(:br)) %></p>
        </div>
        <div class="row mt-2 pb-3 border-bottom">
          <div class="col-md-6 offset-md-1 pl-5">
          <% if customer_signed_in? %>
            <% if post.favorited_by?(current_customer) %>
              <%= link_to post_favorites_path(post), method: :delete do %>
                <i class="fas fa-thumbs-up"></i>いいね済
              <% end %>
              <span>(いいね!した人<%= post.favorites.count %>人)</span>
            <% else %>
              <%= link_to post_favorites_path(post), method: :post do %>
                <i class="far fa-thumbs-up"></i>いいね！
              <% end %>
              <span>(いいね!した人<%= post.favorites.count %>人)</span>
            <% end %>
          <% else %>
            <%= link_to post_favorites_path(post), method: :post do %>
              <i class="far fa-thumbs-up"></i>いいね！
            <% end %>
            <span>(いいね!した人<%= post.favorites.count %>人)</span>
          <% end %>
          </div>
        </div>
      <% end %>
    </div>
  </div>
</div>


