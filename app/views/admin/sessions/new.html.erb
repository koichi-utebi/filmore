<div class="sign-in-bg">
    <%= render 'layouts/flash_message' %>
  <div class="sign-in-text text-center">
    <h3>I feel there is no substitute for <br>going out to the movies.<br> There is nothing like it.</h3>
    <h4 class="text-right">ーSteven Spielberg</h4>
  </div>
  <div class="sign-in-form">
    <h2 class="text-center">管理者ログイン</h2>

    <%= form_with model: @admin, url: admin_session_path, method: :post do |f| %>
      <%= render "public/shared/error_messages", resource: resource %>

      <div class="field md-auto mt-3">
        <%= f.label :email, "メールアドレス" %><br />
        <%= f.email_field :email, autofocus: true, autocomplete: "email", class: "form-control" %>
      </div>

      <div class="field md-auto mt-3">
        <%= f.label :password, "パスワード" %><br/>
        <%= f.password_field :password, autocomplete: "new-password", class: "form-control" %>
      </div>


      <div class="actions text-center">
        <%= f.submit "ログイン", class: "btn btn-outline-success mt-3 w-50" %>
      </div>
    <% end %>

  </div>
</div>
