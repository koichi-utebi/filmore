<div class="container">
  <div class="row">
    <div class="col-md-6 offset-md-3 pt-5 pb-5">
      <h4 class="text-center">プロフィール編集</h4>

      <%= form_with model: @customer, url: admin_customer_path, method: :patch do |f| %>
      <div class="form-group">
        <% render 'layouts/errors', obj: @customer %>
      </div>
      <div class="form-group mt-3">
        <%= f.label :name, "アカウント名", class: "pl-5 ml-4" %><br/>
        <%= f.text_field :name, class: "form-control w-75 mx-auto" %>
      </div>

      <div class="form-group mt-3">
        <%= f.label :name, "メールアドレス", class: "pl-5 ml-4"  %><br/>
        <%= f.text_field :email, class: "form-control w-75 mx-auto" %>
      </div>

      <div class="form-group mt-3">
        <%= f.label :image, "プロフィール画像", class: "pl-5 ml-4" %><br/>
        <%= f.file_field :profile_image, class: "pl-5 ml-4", accept: 'image/*' %>
      </div>

      <div class="form-group mt-3" >
        <span class="pl-5 ml-4">会員ステータス:</span>
        <%= f.radio_button :is_active, true, class: "ml-3" %>
        <%= f.label :is_active, "有効", class: "" %>
        <%= f.radio_button :is_active, false, class: "ml-2" %>
        <%= f.label :is_active, "無効", class: "" %>
      </div>
      <div class="col-md-4 offset-md-4">
        <%= f.submit "変更を保存", class: "btn btn-outline-success w-100" %>
      </div>
      <% end %>

    </div>
  </div>
</div>